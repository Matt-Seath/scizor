# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/asx_trading
ASYNC_DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/asx_trading

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# IBKR TWS API Configuration
IBKR_HOST=127.0.0.1
IBKR_PORT=7497
IBKR_CLIENT_ID=1
IBKR_PAPER_PORT=7496

# Trading Configuration
MAX_POSITIONS=5
MAX_RISK_PER_TRADE=0.02
DAILY_LOSS_LIMIT=0.03
MAX_PORTFOLIO_ALLOCATION=0.20
POSITION_SIZING_METHOD=kelly_fraction

# API Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
APP_NAME=ASX200 Trading System
APP_VERSION=0.1.0
DEBUG=false
LOG_LEVEL=INFO
ENABLE_METRICS=true

# Market Data Configuration
DEFAULT_MARKET_DATA_TYPE=3
ENABLE_LIVE_DATA=false
DATA_COLLECTION_DELAY_MINUTES=10

# Risk Management
ENABLE_RISK_CONTROLS=true
MAX_DRAWDOWN_LIMIT=0.15
CORRELATION_LIMIT=0.70
VAR_CONFIDENCE_LEVEL=0.95

# Monitoring
PROMETHEUS_PORT=8001
HEALTH_CHECK_INTERVAL=60

# Timezone
DEFAULT_TIMEZONE=Australia/Sydney

# Development
TESTING=false
MOCK_IBKR_API=false